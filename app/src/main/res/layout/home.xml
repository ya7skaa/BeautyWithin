<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/home">

    <TextView
        android:layout_width="181dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/makeupButton"
        android:layout_alignLeft="@+id/makeupButton"
        android:layout_alignEnd="@+id/makeupButton"
        android:layout_alignRight="@+id/makeupButton"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:paddingTop="180dp"
        android:text="choose a category!"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />


    <Button
        android:id="@+id/makeupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="129dp"
        android:background="@color/accent"
        android:text="MAKE-UP"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/skincareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:background="@color/accent"
        android:text="SKINCARE"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="607dp" />

</RelativeLayout>
