<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity"
    >


    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/home" />

    <TextView
        android:layout_width="181dp"
        android:layout_height="110dp"

        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:paddingTop="180dp"
        android:text="choose a category!"
        android:textSize="60dp"
        tools:visibility="visible" />


    <Button
        android:id="@+id/makeUpButton"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="454dp"
        android:background="@color/accent"
        android:text="MAKE-UP"

        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/skincareButton"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:layout_marginBottom="386dp"
        android:background="@color/accent"
        android:text="SKINCARE"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="607dp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/skincareButton"
        android:layout_alignLeft="@+id/skincareButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="443dp"
        android:background="@color/accent"
        android:text="sign Out" />

    <Button
        android:id="@+id/savedMakeupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/skincareButton"
        android:layout_alignRight="@+id/skincareButton"
        android:layout_alignBottom="@+id/skincareButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="-68dp"
        android:background="@color/colorAccent"
        android:text="Saved Products"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="607dp" />


</RelativeLayout>
