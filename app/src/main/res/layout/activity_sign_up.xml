<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity">


    <EditText
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/skincareButton"
        android:layout_alignLeft="@+id/skincareButton"
        android:layout_alignEnd="@+id/skincareButton"
        android:layout_alignRight="@+id/skincareButton"
        android:layout_alignBottom="@+id/skincareButton"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="77dp"
        android:background="@color/icons"
        android:hint="sign up!"
        android:padding="5dp" />



    <Button
        android:id="@+id/skincareButton"
        android:layout_width="152dp"
        android:layout_height="33dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:background="@color/primary_light"
        android:text="sign in"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="607dp" />


</RelativeLayout>